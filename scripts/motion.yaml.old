motion_front_door:
  alias: Motion at Front Door
  sequence:
  - condition: template
    value_template: >
      {% if states.script.motion_front_door.attributes.last_triggered is not defined %}
      true
      {% elif as_timestamp(now()) | int   -  as_timestamp(states.script.motion_front_door.attributes.last_triggered) | int > 30 %} 
      true 
      {% else %} 
      false
      {% endif %}  
  - alias: Turn on Front Door motion
    data:
      entity_id: input_boolean.motion_front_door
    service: input_boolean.turn_on
  - delay: 00:00:30
  - alias: Turn off Front Door motion
    data:
      entity_id: input_boolean.motion_front_door
    service: input_boolean.turn_off

